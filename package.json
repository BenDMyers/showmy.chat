{
	"name": "showmychat",
	"version": "1.0.0",
	"main": ".eleventy.js",
	"repository": "https://github.com/BenDMyers/showmy.chat.git",
	"author": "Ben Myers <ben@benmyers.dev>",
	"license": "MIT",
	"scripts": {
		"build": "eleventy",
		"dev": "eleventy --serve",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"prettier": "prettier . --check --ignore-unknown",
		"stylelint": "stylelint '**/*.{css,html}'",
		"eslint": "eslint '**/*.{mjs,js,html}'",
		"htmlhint": "htmlhint '**/*.html'",
		"markdownlint": "markdownlint-cli2 '**/*.md'",
		"prepare": "husky install"
	},
	"dependencies": {
		"@11ty/eleventy": "^1.0.0-beta.10",
		"axios": "^0.26.0",
		"jest": "^27.4.7",
		"serialize-javascript": "^6.0.0",
		"title-case": "^3.0.3",
		"valid-url": "^1.0.9"
	},
	"devDependencies": {
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-html": "^6.2.0",
		"eslint-plugin-jsdoc": "^37.6.1",
		"htmlhint": "^1.1.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.4",
		"markdown-it": "^12.3.2",
		"markdown-it-footnote": "^3.0.3",
		"markdownlint-cli2": "^0.4.0",
		"postcss-html": "^1.3.0",
		"postcss-syntax": "^0.36.2",
		"prettier": "2.5.1",
		"stylelint": "^14.2.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^24.0.0"
	},
	"lint-staged": {
		"*.{html}": "htmlhint",
		"*.{mjs,js,html}": "eslint --cache --fix",
		"*.{css,html}": "stylelint --fix",
		"*.md": "markdownlint-cli2-fix",
		"*.{mjs,js,css,md,json,jsonc,yml}": "prettier --write"
	}
}
