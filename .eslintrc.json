{
	"env": {
		"browser": true,
		"node": true,
		"jest": true,
		"es2021": true
	},
	"parserOptions": {
		"ecmaVersion": 13,
		"sourceType": "script"
	},
	"extends": ["eslint:recommended", "plugin:jsdoc/recommended", "prettier"],
	"plugins": ["jsdoc", "html"],
	"rules": {
		"no-unused-vars": [
			"error",
			{
				"args": "none",
				"ignoreRestSiblings": true,
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_"
			}
		]
	},
	"overrides": [
		{
			"files": ["src/scripts/*.mjs", "jest.config.mjs", "tests/*.test.mjs"],
			"parserOptions": {
				"sourceType": "module"
			}
		}
	]
}
